generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
}

model Category {
  id        String    @id @default(uuid())
  name      String
  slug      String    @unique
  products  Product[]
  createdAt DateTime  @default(now())
}

model Product {
  id          String    @id @default(uuid())
  name        String
  description String
  price       Float
  isActive    Boolean   @default(true)

  categoryId  String
  category    Category  @relation(fields: [categoryId], references: [id])

  createdAt   DateTime  @default(now())
}

enum Role {
  USER
  ADMIN
}